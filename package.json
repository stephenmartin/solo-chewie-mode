{
    "name": "chewie-mode",
    "description": "Chewie Mode â€” a custom Ghost theme",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "author": {
        "name": "Ghost Foundation",
        "email": "hello@ghost.org",
        "url": "https://ghost.org"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "docs": "https://solo.ghost.io/about/",
    "config": {
        "posts_per_page": 999,
        "image_sizes": {
            "xs": {
                "width": 150
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 720
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1200
            },
            "xxl": {
                "width": 2000
            }
        },
        "card_assets": true,
        "custom": {
            "navigation_layout": {
                "type": "select",
                "options": ["Logo on the left", "Logo in the middle", "Stacked"],
                "default": "Logo on the left"
            },
            "show_special_guests": {
                "type": "boolean",
                "default": true,
                "group": "homepage"
            },
            "special_guests_tag": {
                "type": "text",
                "default": "Project",
                "group": "homepage",
                "visibility": "show_special_guests:true"
            },
            "color_sunday": {
                "type": "color",
                "default": "#D9ECF7",
                "description": "Post backgrounds are set by publish day.",
                "group": "post"
            },
            "color_monday": {
                "type": "color",
                "default": "#E7E7B5",
                "group": "post"
            },
            "color_tuesday": {
                "type": "color",
                "default": "#BFE8D6",
                "group": "post"
            },
            "color_wednesday": {
                "type": "color",
                "default": "#D8DEE3",
                "group": "post"
            },
            "color_thursday": {
                "type": "color",
                "default": "#F0F2F3",
                "group": "post"
            },
            "color_friday": {
                "type": "color",
                "default": "#F5D8D6",
                "group": "post"
            },
            "color_saturday": {
                "type": "color",
                "default": "#F6F8F7",
                "group": "post"
            }
        }
    },
    "scripts": {
        "dev": "gulp",
        "test": "gscan .",
        "zip": "gulp zip"
    },
    "devDependencies": {
        "@tryghost/shared-theme-assets": "2.5.2",
        "autoprefixer": "10.4.24",
        "beeper": "2.1.0",
        "cssnano": "7.1.2",
        "gscan": "5.2.5",
        "gulp": "5.0.1",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "10.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.1.0",
        "ordered-read-streams": "2.0.0",
        "postcss": "8.5.6",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.3"
    }
}
